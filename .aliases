# git aliases
# common
alias gc='git commit'
alias gcm='git commit -m'
alias gm='git merge --no-ff'
alias ga='git add'
alias gd='git diff'
alias gs='git status'

alias gx='git checkout'
alias gxd='git checkout develop'
alias gxm='git checkout master'
alias gxb='git checkout -b'

alias gb='git branch'
alias gbm='git branch -m'
alias gbd='git branch -d'
alias gbD='git branch -D'
alias gl="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"

alias gr='git rebase'
alias grd='git rebase develop'
alias grm='git rebase master'
alias grc='git rebase --continue'
alias grs='git rebase --skip'
alias gra='git rebase --abort'

alias gst='git stash'
alias gstp='git stash pop'

# tags
alias gt='git tag -a'
alias gtd='git tag -d'
alias gpot='git push origin --tags'

# complex
alias gops='git commit --amend --no-edit'
alias gundo='git reset --soft HEAD~'
alias grh='git reset HEAD'
alias gdont='ga . && gops && gpo -f'

alias gpo='git push origin HEAD'
alias gpom='git push origin master'
alias gpl='git pull origin'
alias gplm='git pull origin master'
alias gpld='git pull origin development'
alias git_vai='ga . && gops && gpo -f'

# Capistrano
alias cpd='cap production deploy'
alias cpdr='cap production deploy:restart'
alias cpsr='cap production sidekiq:restart'
alias cpss='cap production sidekiq:stop'

# general aliases
alias a='c && ack'
alias s='c && ack -Q'
alias c='clear'
